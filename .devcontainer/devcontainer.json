{
  "name": "Claude Code + SuperClaude + MCP Development Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  
  // Features configuration for development tools
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20",
      "nodeGypDependencies": true,
      "nvmVersion": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true,
      "optimize": true
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": true,
      "moby": true
    },
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "latest"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "latest",
      "tflint": true,
      "terragrunt": true
    }
  },

  // VS Code customization
  "customizations": {
    "vscode": {
      "extensions": [
        // TypeScript/JavaScript
        "ms-vscode.vscode-typescript-next",
        "ms-vscode.vscode-json",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        
        // Python
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "ms-python.isort",
        
        // Docker & Kubernetes
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        
        // Git & GitHub
        "github.vscode-github-actions",
        "github.copilot",
        "github.copilot-chat",
        "eamodio.gitlens",
        
        // Markdown & Documentation
        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint",
        
        // Development Tools  
        "ms-vscode.remote-containers",
        "ms-vscode-remote.remote-ssh",
        "ms-vscode.azure-account",
        
        // API & HTTP
        "humao.rest-client",
        "rangav.vscode-thunder-client",
        
        // Database
        "ms-mssql.mssql",
        "ckolkman.vscode-postgres",
        
        // Claude Code Extension (when available)
        "anthropic.claude-code",
        
        // Productivity
        "streetsidesoftware.code-spell-checker",
        "gruntfuggly.todo-tree",
        "aaron-bond.better-comments",
        "alefragnani.bookmarks",
        
        // Theme & UI
        "pkief.material-icon-theme",
        "github.github-vscode-theme",
        "ms-vscode.theme-tomorrowkit"
      ],
      
      "settings": {
        // Terminal configuration
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh",
            "args": ["-l"]
          }
        },
        "terminal.integrated.fontFamily": "MesloLGS NF",
        "terminal.integrated.fontSize": 14,
        
        // Editor configuration
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.formatOnType": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": true,
          "source.organizeImports": true,
          "source.removeUnusedImports": true
        },
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": true,
        "editor.wordWrap": "on",
        "editor.minimap.enabled": true,
        "editor.bracketPairColorization.enabled": true,
        "editor.guides.bracketPairs": true,
        
        // File handling
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 1000,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,
        "files.exclude": {
          "**/node_modules": true,
          "**/.git": true,
          "**/.DS_Store": true,
          "**/dist": true,
          "**/build": true,
          "**/__pycache__": true,
          "**/*.pyc": true
        },
        
        // Language-specific settings
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2
        },
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2
        },
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.tabSize": 4,
          "editor.insertSpaces": true
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[yaml]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.tabSize": 2
        },
        "[markdown]": {
          "editor.defaultFormatter": "yzhang.markdown-all-in-one",
          "editor.wordWrap": "on"
        },
        
        // TypeScript configuration
        "typescript.preferences.quoteStyle": "double",
        "typescript.preferences.importModuleSpecifier": "relative",
        "typescript.updateImportsOnFileMove.enabled": "always",
        "typescript.suggest.autoImports": true,
        
        // Python configuration
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "python.sortImports.provider": "isort",
        
        // Git configuration
        "git.enableSmartCommit": true,
        "git.confirmSync": false,
        "git.autofetch": true,
        "gitlens.currentLine.enabled": false,
        "gitlens.hovers.currentLine.over": "line",
        
        // Search configuration
        "search.exclude": {
          "**/node_modules": true,
          "**/dist": true,
          "**/build": true,
          "**/.git": true,
          "**/coverage": true,
          "**/.nyc_output": true
        },
        
        // Workspace settings
        "workbench.colorTheme": "GitHub Dark Default",
        "workbench.iconTheme": "material-icon-theme",
        "workbench.startupEditor": "welcomePage",
        "workbench.editor.enablePreview": false,
        "workbench.editor.limit.enabled": true,
        "workbench.editor.limit.value": 10,
        
        // Security and privacy
        "telemetry.telemetryLevel": "off",
        "update.showReleaseNotes": false,
        
        // Docker settings
        "docker.showStartPage": false,
        
        // Claude Code specific settings (when extension is available)
        "claude.autoSave": true,
        "claude.formatOnSave": true,
        "claude.telemetry": false
      }
    }
  },

  // Container configuration
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.claude,target=/home/vscode/.claude,type=bind,consistency=cached"
  ],

  // Lifecycle scripts
  "postCreateCommand": "bash .devcontainer/scripts/post-create.sh",
  "postStartCommand": "bash .devcontainer/scripts/post-start.sh",
  "postAttachCommand": "bash .devcontainer/scripts/post-attach.sh",

  // User configuration
  "remoteUser": "vscode",
  "containerUser": "vscode",

  // Port forwarding for development services
  "forwardPorts": [
    3000,  // Main application
    3001,  // Environment controller
    3002,  // MCP orchestrator  
    3003,  // Configuration manager
    5432,  // PostgreSQL
    6379,  // Redis
    9090,  // Prometheus
    3000   // Grafana (will be mapped to different port)
  ],

  "portsAttributes": {
    "3000": {
      "label": "Main Application",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Environment Controller",
      "onAutoForward": "silent"
    },
    "3002": {
      "label": "MCP Orchestrator", 
      "onAutoForward": "silent"
    },
    "3003": {
      "label": "Configuration Manager",
      "onAutoForward": "silent"
    },
    "5432": {
      "label": "PostgreSQL Database",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis Cache",
      "onAutoForward": "silent"
    },
    "9090": {
      "label": "Prometheus Monitoring",
      "onAutoForward": "silent"
    },
    "3001": {
      "label": "Grafana Dashboard",
      "onAutoForward": "notify"
    }
  },

  // Environment variables
  "containerEnv": {
    "NODE_ENV": "development",
    "PYTHONPATH": "/workspace",
    "TERM": "xterm-256color",
    "SHELL": "/bin/zsh",
    "CLAUDE_ENV_MODE": "development",
    "TZ": "UTC"
  },

  // Shutdown action
  "shutdownAction": "stopCompose"
}