{
  "name": "@claude-env/environment-controller",
  "version": "1.0.0",
  "description": "Environment Controller service for managing development environments",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
