    "js-yaml": "^4.1.0",
    "fs-extra": "^11.1.1",
    "chokidar": "^3.5.3",
    "ws": "^8.14.2",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "node-cron": "^3.0.3",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.0.1",
    "prom-client": "^15.0.0",
    "uuid": "^9.0.1",
    "tar": "^6.2.0",
    "archiver": "^6.0.1"
